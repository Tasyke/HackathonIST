<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HackathonIST.BuilderStats"
             Title="Статистика">
    <ScrollView>
    <StackLayout>
        <StackLayout.Resources>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="Large" />
                <Setter Property="Margin" Value="20,0, 20,0" />
                <Setter Property="WidthRequest" Value="500" />
                    <Setter Property="VerticalOptions" Value="Center" />
                    <Setter Property="HorizontalOptions" Value="Center" />
                </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="20, 30, 20, 0" />
                <Setter Property="WidthRequest" Value="500" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
            <Style TargetType="Editor">
                <Setter Property="FontSize" Value="5" />
                <Setter Property="Margin" Value="15,0, 20,0" />
                <Setter Property="WidthRequest" Value="500" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
        </StackLayout.Resources>


        <Label Text="Фамилия: "/>
            <Editor FontSize="Large" Text=""  x:Name="EnSurName"/>
        <Label Text="Имя: " />
            <Editor FontSize="Large" Text=""  x:Name="EnName"/>
        <Label Text="Отчество: " />
            <Editor FontSize="Large" Text=""  x:Name="EnLastName"/>
        <Label Text="Телефон: " />
            <Editor FontSize="Large" Text=""  x:Name="EnPhone"/>
        <Label Text="E-mail: " />
            <Editor FontSize="Large" Text=""  x:Name="EnEmail"/>
        <Label Text="Работодатель: " />
            <Editor FontSize="Large" Text=""  x:Name="EnCompany"/>
        <Label Text="Специальность: " />
            <Editor FontSize="Large" Text=""  x:Name="EnWork"/>

            <Button Text="Сохранить" 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
    </StackLayout>
    </ScrollView>
</ContentPage>